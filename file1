#include<stdio.h>
#include<unistd.h>
#include<sys/wait.h>

void main()
{
pid_t pro;
int num;

A:
{
printf("\n Enter the number ");
scanf("%d",&num);
}

if(num>0)
{
goto A;
}
else
{
printf("\n Please enter POSITIVE number ! \n");
goto A;
}

B:
{
pro=fork();
if(pro<0)
{
printf("Child is not created");
}
else if(pro==0)
{
printf("\n The sequence is : ");
for(int i=n; i>0; i=i/2)
{
printf(" %d ", i);
}
}
else
{
wait(NULL);
printf("\n Process Completed");
